<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="movie"
            type="com.es.tmdb.model.MovieDetail" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".ui.fragment.DetailFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/posterIV"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            app:loadImage="@{`https://image.tmdb.org/t/p/original`+movie.poster_path}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/posterIV">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imdb_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imdb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ratingIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/rate_icn"
                app:layout_constraintBottom_toBottomOf="@+id/imdb_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/imdb_logo"
                app:layout_constraintTop_toTopOf="@+id/imdb_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vote_averageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@{String.valueOf(movie.vote_average)}"
                app:layout_constraintStart_toEndOf="@id/ratingIV"
                app:layout_constraintTop_toTopOf="@+id/ratingIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/ratingIV"
                app:layout_constraintHorizontal_bias="0"
                android:paddingHorizontal="4dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vote_countTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="@{`/`+String.valueOf(movie.vote_count)}"
                app:layout_constraintStart_toEndOf="@id/vote_averageTV"
                app:layout_constraintTop_toTopOf="@+id/ratingIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/ratingIV"
                app:layout_constraintHorizontal_bias="0"
                android:paddingEnd="4dp"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/release_dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@{movie.release_date}"
                app:layout_constraintStart_toEndOf="@id/vote_countTV"
                app:layout_constraintTop_toTopOf="@+id/ratingIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/ratingIV"
                app:layout_constraintHorizontal_bias="0"
                android:paddingHorizontal="4dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orginal_titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@{movie.original_title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imdb_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintVertical_bias="0"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overviewTV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textStyle="normal"
                android:text="@{movie.overview}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orginal_titleTV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>